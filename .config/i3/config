# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $mov_left resize shrink width 10 px or 10 ppt
        bindsym $mov_up resize grow height 10 px or 10 ppt
        bindsym $mov_down resize shrink height 10 px or 10 ppt
        bindsym $mov_right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym q mode "default"
}

bindsym $mod+r mode "resize"

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $indicator
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $indicator

for_window [class=".*"] border pixel 2

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position top
	font pango:Ubuntu Nerd Font 8
	status_command i3blocks -c ~/.config/i3/i3blocks.conf
	tray_output primary
	colors {
		background $inactive-bg-color
	    	separator #757575
		#                  border             background         text
		focused_workspace  $inactive-bg-color $inactive-bg-color $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master  5%+ unmute #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master  5%- unmute  #decrease sound volume
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master  1%+ unmute
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master  1%+ unmute
bindsym XF86AudioMute exec --no-startup-id amixer -q -D pulse sset Master toggle # mute sound

bindsym $mod+KP_Add exec --no-startup-id amixer -q -D pulse sset Master  5%+ unmute #increase sound volume
bindsym $mod+KP_Subtract exec --no-startup-id amixer -q -D pulse sset Master  5%- unmute  #decrease sound volume
bindsym $mod+KP_Multiply exec --no-startup-id amixer -q -D pulse sset Master toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id $script_path/brightness inc # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id $script_path/brightness dec # decrease screen brightness
bindsym $mod+XF86MonBrightnessUp exec --no-startup-id light -S 100 # highest brightness
bindsym $mod+XF86MonBrightnessDown exec --no-startup-id light -S 1 # lowest brightness

# toggle workspace to other output (screen)
bindsym $mod+Shift+p move workspace to output right

set $mode_monitor Monitor Setting | [p]rimary | [s]econdary | [d]uplicate | [m]irror | [e]xtend | [w]allpaper
mode  "$mode_monitor" {
	bindsym p exec --no-startup-id mons -o, exec --no-startup-id $script_path/setWallpaper, mode "default"
	bindsym s exec --no-startup-id mons -s, exec --no-startup-id $script_path/setWallpaper, mode "default"
	bindsym d exec --no-startup-id mons -d, exec --no-startup-id $script_path/setWallpaper, mode "default"
	bindsym m exec --no-startup-id mons -m, exec --no-startup-id $script_path/setWallpaper, mode "default"
	bindsym e exec --no-startup-id mons -e right, exec --no-startup-id $script_path/setWallpaper, mode "default"

	bindsym w exec --no-startup-id $script_path/setWallpaper

        # back to normal: Enter or Escape
	bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym q mode "default"
}
bindsym $mod+p mode "$mode_monitor"

# Wallpaper mode to set and delete a wallpaper
set $mode_wallpaper Wallpaper | [w] set | [d]elete
mode  "$mode_wallpaper" {
	bindsym w exec --no-startup-id $script_path/setWallpaper
	bindsym d exec --no-startup-id $script_path/deleteWallpaper, exec --no-startup-id $script_path/setWallpaper

        # back to normal: Enter or Escape
	bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym q mode "default"
}
bindsym $mod+w mode "$mode_wallpaper"


# Media player controls with mode
set $mode_player Control Music | [P] Play Pause | [N,] Previous | [M,] Next
mode  "$mode_player" {
	bindsym p exec --no-startup-id playerctl --player='spotify' play-pause, mode "default"
	bindsym m exec --no-startup-id playerctl --player='spotify' next
	bindsym Right exec --no-startup-id playerctl --player='spotify' next
	bindsym n exec --no-startup-id playerctl --player='spotify' previous
	bindsym Left exec --no-startup-id playerctl --player='spotify' previous

        # back to normal: Enter or Escape
	bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym q mode "default"
}
bindsym $mod+m mode "$mode_player"

# mode to control logout, shutdown ...
set $mode_system System | [l] lock | [e] logout | [s] suspend | [h] hibernate | [r] reboot | [Shift+s] shutdown
mode "$mode_system" {
	bindsym l exec --no-startup-id $script_path/i3exit lock, mode "default" 
	bindsym e exec --no-startup-id $script_path/i3exit logout, mode "default"
	bindsym s exec --no-startup-id $script_path/i3exit suspend, mode "default"
	bindsym h exec --no-startup-id $script_path/i3exit hibernate, mode "default"
	bindsym r exec --no-startup-id $script_path/i3exit reboot, mode "default"
	bindsym Shift+s exec --no-startup-id $script_path/i3exit shutdown, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym q mode "default"
}
bindsym $mod+i mode "$mode_system"
bindsym $mod+Shift+x exec $script_path/i3exit lock

set $mode_vpn VPN [] connect, [Shift] disconnect; [+t] tum, [+s] stusta
mode "$mode_vpn" {
	bindsym t exec --no-startup-id sudo $script_path/vpn connect tum, mode "default"
	bindsym Shift+t exec --no-startup-id sudo $script_path/vpn disconnect tum, mode "default"

	bindsym s exec --no-startup-id sudo $script_path/vpn connect stusta, mode "default"
	bindsym Shift+s exec --no-startup-id sudo $script_path/vpn disconnect stusta, mode "default"

        # back to normal: Enter or Escape
	bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym q mode "default"
}
bindsym $alt+v mode "$mode_vpn"

