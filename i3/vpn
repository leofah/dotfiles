#!/bin/sh
# handle vpn connections

# exit code:	0 	all fine, (stusta: no state change
# 		2 	wrong usage
# 		-1	some error

tum=tum
stusta=stusta
connect=connect
disconnect=disconnect
usage="Usage: $0 {$connect|$disconnect} {$tum|$stusta}"
config_path=/home/leo/.config/vpn
vpn_stusta=/home/leo/scripts/i3/vpn_stusta

case "$2" in
    $tum)
	case "$1" in
	    $connect)
		# connect to tum
		ciscovpn -s < $config_path/tum
		;;
	    $disconnect)
		# disconnect to tum
		ciscovpn disconnect
		;;
	    *)
        	echo $usage
	        exit 2
		;;
	esac
        ;;
    $stusta)
	case "$1" in
	    $connect)
		sudo $vpn_stusta connect
		exit $?
		;;
	    $disconnect)
		sudo $vpn_stusta disconnect
		exit $?
		;;
	    *)
        	echo $usage
	        exit 2
		;;
	esac
        ;;
    *)
        echo $usage
        exit 2
esac

exit 0
